{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://ns.adobe.com/xdm/external/activity-streams-2/context",
    "description": "https://www.w3.org/TR/activitystreams-vocabulary/#dfn-id",
    "definitions": {
        "keywords": {
            "type": "string",
            "enum": [
                "@context",
                "@id",
                "@value",
                "@language",
                "@type",
                "@container",
                "@list",
                "@set",
                "@reverse",
                "@index",
                "@base",
                "@vocab",
                "@graph",
                ":"
            ]
        },
        "blank-node-identifier": {
            "type": "string",
            "pattern": "^_:.+$"
        },
        "term": {
            "type": "string",
            "pattern": "^[^:@].+$"
        },
        "expanded-term-definition": {
            "type": "object",
            "properties": {
                "@id": {
                    "anyOf": [
                        {
                            "$ref": "https://ns.adobe.com/xdm/external/activity-streams-2/uri"
                        },
                        {
                            "$ref": "#/definitions/term"
                        },
                        {
                            "$ref": "#/definitions/blank-node-identifier"
                        },
                        {
                            "$ref": "#/definitions/keywords"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "@reverse": {
                    "anyOf": [
                        {
                            "$ref": "https://ns.adobe.com/xdm/external/activity-streams-2/uri"
                        },
                        {
                            "$ref": "#/definitions/term"
                        },
                        {
                            "$ref": "#/definitions/blank-node-identifier"
                        },
                        {
                            "$ref": "#/definitions/keywords"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "@type": {
                    "anyOf": [
                        {
                            "$ref": "https://ns.adobe.com/xdm/external/activity-streams-2/uri"
                        },
                        {
                            "$ref": "#/definitions/term"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "@id",
                                "@vocab"
                            ]
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "@language": {
                    "oneOf": [
                        {
                            "$ref": "https://ns.adobe.com/xdm/external/activity-streams-2/language-tag"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "@container": {
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "type": "string",
                            "enum": [
                                "@set",
                                "@list",
                                "@language",
                                "@index"
                            ]
                        }
                    ]
                }
            },
            "additionalProperties": false
        },
        "single-context": {
            "type": "object",
            "properties": {
                "@vocab": {
                    "anyOf": [
                        {
                            "$ref": "https://ns.adobe.com/xdm/external/activity-streams-2/uri"
                        },
                        {
                            "$ref": "#/definitions/blank-node-identifier"
                        },
                        {
                            "$ref": "#/definitions/term"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "@base": {
                    "oneOf": [
                        {
                            "$ref": "https://ns.adobe.com/xdm/external/activity-streams-2/uri"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "@language": {
                    "oneOf": [
                        {
                            "$ref": "https://ns.adobe.com/xdm/external/activity-streams-2/language-tag"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "patternProperties": {
                "^([^:@_].*)|(_:.*)$": {
                    "anyOf": [
                        {
                            "$ref": "https://ns.adobe.com/xdm/external/activity-streams-2/uri"
                        },
                        {
                            "$ref": "#/definitions/term"
                        },
                        {
                            "$ref": "#/definitions/blank-node-identifier"
                        },
                        {
                            "$ref": "#/definitions/keywords"
                        },
                        {
                            "type": "null"
                        },
                        {
                            "$ref": "#/definitions/expanded-term-definition"
                        },
                        {
                            "properties": {
                                "@context": {
                                    "$ref": "#/definitions/single-or-array-of-contexts"
                                }
                            },
                            "type": "object"
                        }
                    ]
                }
            },
            "additionalProperties": false
        },
        "single-context-or-uri": {
            "oneOf": [
                {
                    "$ref": "https://ns.adobe.com/xdm/external/activity-streams-2/uri"
                },
                {
                    "$ref": "#/definitions/single-context"
                }
            ]
        },
        "single-or-array-of-contexts": {
            "oneOf": [
                {
                    "$ref": "#/definitions/single-context-or-uri"
                },
                {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/single-context-or-uri"
                    }
                }
            ]
        }
    },
    "properties": {
        "@context": {
            "$ref": "#/definitions/single-or-array-of-contexts"
        }
    },
    "type": "object",
    "title": "Context"
}
